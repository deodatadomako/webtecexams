    <title>Registration Page</title>
</head>

<body id = "registration">
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">Good Health Consult</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/students">Students</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                </ul>
                <!-- this goes to the right -->
                <ul class="nav justify-content-end">
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/register">Register</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Navbar ends -->

    <div class="container pt-5">
        <h1>Register</h1>
        <div class="card" style="width: 35rem;">
            <div class="card-body">
                <form action="/register" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4"> Full Name</label>
                            <input type="text" name="name" class="form-control" id="inputEmail4"
                                placeholder="eg. Angel Obinim">
                        </div>

                        <div class="form-group col-md-6">
                            <label for="Date of Birth">Date of Birth</label>
                            <input type="datetime" name="datetime" class="form-control" id="inputDateofBirth4"
                                placeholder="DD/MM/YYYY">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputAddress">Address</label>
                        <input type="text" name="Address" class="form-control" id="inputAddress"
                            placeholder="eg. Geo Location or City ">
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputState">Contact Number</label>
                            <input name="Contact Number" id="inputContact" class="form-control"
                               placeholder="eg. 0244000000">
                        </div>
                        
                        <div class="form-group col-md-6">
                            <label for="inputState">Emergency Contact</label>
                            <input name="Emergency Contact Number" id="inputEmergencyContact" class="form-control"
                               placeholder="eg. 0244000000">
                        </div>
                       
                    <button type="submit" class="btn btn-primary btn-block">REGISTER</button>
                </form>
            </div>
        </div>
    </div>



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
